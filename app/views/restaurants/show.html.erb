
<div class="container">
  <div class="d-flex flex-row mb-3 justify-content-around align-items-center" >
    <h2 class="p-2 flex-grow-1"><%= @restaurant.name %></h2>
    <p class="p-2"><%= @restaurant.address %></p>
  </div>

  <div class="d-flex flex-column mb-3">
    <p class="m-3"><strong>Reviews</strong></p>
    <ul class="list-group">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item w-100 p-3 m-3 shadow bg-body rounded"><%= review.content %> - Rating: <%= review.rating %></li>
      <% end %>
    </ul>
    <br>
  </div>

  <button type="button" class="btn btn-primary"><%= link_to 'Go Back', restaurants_path%></button>
  <button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_restaurant_path %></button>
  <button type="button" class="btn btn-success" ><%= link_to 'Send review', new_restaurant_review_path(@restaurant) %></button>
</div>
